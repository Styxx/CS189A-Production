

<% if current_user %>
    <div class="page-header">
      <h2>Messages with
        <%=@groupUsers[0].name%>
        <% len = @groupUsers.length - 1 %>
        <% for i in 1..len %>
            <%=", " + @groupUsers[i].name%>
        <% end %>
      </h2>
    </div>

    <%= render 'groupForm' %>
<% else %>
    nope
<% end %>

<div class="panel panel-default" id="comments">
  <div class="panel-body">

    <ul class="media-list" id="msgList">
      <%#= render 'chats' %>
    </ul>
  </div>
</div>

