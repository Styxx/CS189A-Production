<%= link_to messages_list_path(current_user.id), id: "icon" do %>
    <span class="fa fa-plus fa-3x"></span>
<% end %>

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button><br><br>






<div>
  <% @groupids.each do |ids| %>
      <% group = User.find(ids) %>
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="<%= group[0].image %>" alt="...">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%= group[0].name%>
            <% len = group.length - 1 %>
            <% for i in 1..len %>
                <% unless  group[i].id == current_user.id%>
                    <%=", " + group[i].name%>
                <% end %>
            <% end %>

            <!--VERRRYYY IMPORTANTTT!-->
            <%# @group.push(current_user).sort_by { |user| user[:id]}%>
            <% group.sort_by { |user| user[:id]}%>
            <%groupid = group[0].id.to_s%>
            <% len = group.length - 1 %>
            <% for i in 1..len %>
                <%groupid = groupid + "," + group[i].id.to_s%>
            <% end %>
            <%#= groupid %>
          </h4>
          <%= link_to "MESSAGES", group_msgs_path(groupid) %>
        </div>
      </div>

  <% end %>

  <% @singleids.each do |id| %>
      <% user = User.find(id) %>
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="<%= user.image %>" alt="...">
          </a>
        </div>
        <div class="media-body">

          <h4 class="media-heading"><%= link_to user.name, user_path(user.id) %></h4>
          <%= link_to "MESSAGES", user_match_msg_path(user.id) %>
        </div>
      </div>
  <% end %>
</div>


<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Message</h4>
      </div>
      <div class="modal-body">
        <input type="text" maxlength="120" placeholder="Recipients Here" />
      </div>
      <div class="modal-body">
        <input type="text" maxlength="120" placeholder="Type Message Here" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Send</button>
      </div>
    </div>

  </div>
</div>



