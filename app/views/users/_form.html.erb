<div class="legendary">
  <legend>BASIC INFORMATION</legend>
</div>

<%= form_tag({controller: "users", action: "updateSurvey"}, method: "post", :class => "form-horizontal") do %>

    <div class="form-group">
      <label class="col-md-4 control-label" for="radios">Instruments you play:</label>
      <div class="col-md-4">
        <div class="radio">
          <label for="radios-0">
            <!-- <%= check_box_tag "instrument[]", 'Guitar' %> Guitar -->
            <%= check_box_tag "instrument[]", 'Guitar' %> Guitar <br><%= link_to image_tag("instruments/guitar.png", alt: "Guitar") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-1">
            <%= check_box_tag "instrument[]", 'Bass' %> Bass <br><%= link_to image_tag("instruments/bass.png", alt: "Bass") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "instrument[]", 'Vocals' %> Vocals <br><%= link_to image_tag("instruments/vocals.png", alt: "Vocals") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "instrument[]", 'Drums' %> Drums <br><%= link_to image_tag("instruments/drums.png", alt: "Drums") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "instrument[]", 'Keyboard' %> Keyboard <br><%= link_to image_tag("instruments/keyboard.png", alt: "Keyboard") %>
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="radios">Artists you are looking for:</label>
      <div class="col-md-4">
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "looking[]", 'Guitar' %> Guitar <br><%= link_to image_tag("instruments/guitar.png", alt: "Guitar") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-1">
            <%= check_box_tag "looking[]", 'Bass' %> Bass <br><%= link_to image_tag("instruments/bass.png", alt: "Bass") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "looking[]", 'Vocals' %> Vocals <br><%= link_to image_tag("instruments/vocals.png", alt: "Vocals") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "looking[]", 'Drums' %> Drums <br><%= link_to image_tag("instruments/drums.png", alt: "Drums") %>
          </label>
        </div>
        <div class="radio">
          <label for="radios-0">
            <%= check_box_tag "looking[]", 'Keyboard' %> Keyboard <br><%= link_to image_tag("instruments/keyboard.png", alt: "Keyboard") %>
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="checkboxes">Genres:</label>
      <div class="col-md-4">
        <label class="checkbox-inline" for="checkboxes-0">
          <%= check_box_tag "genre[]", 'Rockabilly' %> Rockabilly
        </label>
        <label class="checkbox-inline" for="checkboxes-1">
          <%= check_box_tag "genre[]", 'Metalcore' %> Metalcore
        </label>
        <label class="checkbox-inline" for="checkboxes-2">
          <%= check_box_tag "genre[]", 'Future Bass' %> Future Bass
        </label>
        <label class="checkbox-inline" for="checkboxes-3">
          <%= check_box_tag "genre[]", 'Experimental' %> Experimental
        </label>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Influence:</label>
      <div class="col-md-4">
        <!-- <input id="textinput" name="textinput" type="text" placeholder="Enter your influences" class="form-control input-md"> -->
        <%= text_field_tag :influence %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Media:</label>
      <div class="col-md-4">
        <!-- <input id="textinput" name="textinput" type="text" placeholder="Enter your influences" class="form-control input-md"> -->
        <%= text_field_tag :url %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Bio:</label>
      <div class="col-md-4">
        <!-- <input id="textinput" name="textinput" type="text" placeholder="Enter your influences" class="form-control input-md"> -->
        <%= text_area_tag :bio %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput"></label>
      <div class="col-md-4">
        <!-- <input id="textinput" name="textinput" type="text" placeholder="Enter your influences" class="form-control input-md"> -->
        <%= submit_tag "Submit" %>
      </div>
    </div>

    <!-- <%= submit_tag("Submit") %> -->
<% end %>

</div>
